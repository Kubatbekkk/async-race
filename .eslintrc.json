{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb-base/legacy",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "plugins": [
        "import", 
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "no-undef":"off",
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off",
        "linebreak-style":0,
        "@typescript-eslint/no-explicit-any": 2,
        "no-shadow": "off"
    }
}
